{
  "swagger": "2.0",
  "info": {
    "title": "Hypnos API",
    "description": "API Express para detecção de fadiga em postos de trabalho",
    "version": "1.0"
  },
  "definitions": {
    "Supervisor": {
      "properties": {
        "_id": {
          "type": "string"
        },
        "registration": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "admissionDate": {
          "type": "string",
          "example": "12-01-2003"
        },
        "createdAt": {
          "type": "string",
          "example": "12-01-2003"
        },
        "updatedAt": {
          "type": "string",
          "example": "12-01-2003"
        }
      },
      "required": ["registration", "name", "password", "admissionDate"]
    }
  },
  "basePath": "/",
  "paths": {
    "/supervisors": {
      "get": {
        "tags": ["Supervisor"],
        "summary": "Retorna uma lista de supervisores",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Lista de supervisores cadastrados",
            "schema": {
              "type": "array",
              "$ref": "#/definitions/Supervisor"
            }
          }
        }
      },
      "post": {
        "description": "Cadastra um novo supervisor",
        "produces": ["application/json"],
        "tags": ["Supervisor"],
        "parameters": [
          {
            "in": "body",
            "name": "supervisor",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/Supervisor"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário cadastrado com sucesso",
            "schema": {
              "type": "object",
              "$ref": "#/definitions/Supervisor"
            }
          }
        }
      }
    }
  }
}
